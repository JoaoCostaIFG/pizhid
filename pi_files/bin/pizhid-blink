#!/bin/sh

cd "/sys/class/leds/led0" || exit 1
# Set the Pi Zero ACT LED trigger to 'none' (we control it).
printf "none" >"trigger"

blink() {
  # Blink the ACT LED (1 - off, 0 - on)
  printf 1 >"brightness"
  sleep 0.2
  printf 0 >"brightness"
}

blink
sleep 0.1
blink

# Restore trigger
echo "mmc0" >"trigger"
